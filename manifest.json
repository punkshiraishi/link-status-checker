{
  "manifest_version": 3,
  "name": "Link Picker",
  "version": "1.0",
  "description": "Extract and display article links from web pages",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Link Picker"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["tab.html"],
      "matches": ["<all_urls>"]
    }
  ]
}